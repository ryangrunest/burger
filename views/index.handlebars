

<div class="row">
  <div class="col-xs-12 col-md-4 my-5">
    <div class="container">
      <h3>Burgers That Have <strong>Not</strong> Been Devoured:</h3>
      <ul>
        {{#each burgers}}
        {{#unless DEVOURED}}
        <li>
          <span class="col">{{NAME}}</span>
          <button class="devour-burger" id="{{id}}">Eat me</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div id="form-div" class="col-xs-12 col-md-4 my-5">
    <div class="container">
      <h1><i class="far fa-arrow-alt-circle-down"></i> Add a Burger <i class="far fa-arrow-alt-circle-down"></i></h1>
      <form class="create-form">

        <div class="form-group">
          <input type="text" id="burgerName" name="name" placeholder="Burger Name">
        </div>
        <button id="add-burger" type="submit">Add Burger</button>
      </form>
    </div>
    
  </div>

  <div class="col-xs-12 col-md-4 my-5">
    <div class="container">
      <h3>Burgers That <strong>Have</strong> Been Devoured:</h3>
      <ul>
        {{#each burgers}}
        {{#if DEVOURED}}
        <li class="">
          {{NAME}}
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
    
  </div>
</div>






